<h1> Fornecedores </h1>

<div>
  <%= link_to "Cadastrar Fornecedor", new_provider_path, class:'btn btn-primary' %>
</div><br>

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th scope="col">Nome </th>
      <th scope="col">Tipo de Cadastro</th>
      <th scope="col">CPF/CNPJ</th>
      <th scope="col">Cep</th>
      <th scope="col">Logradouro</th>
      <th scope="col">Complemento</th>
      <th scope="col">Bairro</th>
      <th scope="col">Localidade</th>
      <th scope="col">Estado</th>
    </tr>
  </thead>
<% @provider.each do |provider|%>
    <tbody>
      <tr>
        <td><%=provider.name%></td>
        <td><%=provider.personregistration%></td>
        <td><%=provider.cpf%></td>
        <td><%=provider.cep%></td>
        <td><%=provider.publicplace%></td>
        <td><%=provider.complement%></td>
        <td><%=provider.district%></td>
        <td><%=provider.location%></td>
        <td><%=provider.phew%></td>
      </tr>
    </tbody>
  </table>
<%end%>
